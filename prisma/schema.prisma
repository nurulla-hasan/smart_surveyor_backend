generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                   String        @id @default(auto()) @map("_id") @db.ObjectId
  email                String        @unique
  name                 String
  password             String
  role                 Role          @default(surveyor)
  phone                String?
  companyName          String?
  licenseNo            String?
  address              String?
  resetPasswordToken   String?
  resetPasswordExpire  DateTime?
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt
  clients              Client[]      @relation("UserClients")
  clientAccounts       Client[]      @relation("AccountClients")
  bookings             Booking[]
  reports              Report[]
  calculations         Calculation[]
  savedMaps            SavedMap[]
  blockedDates         BlockedDate[]

  @@map("users")
}

enum Role {
  surveyor
  client
  admin
}

model Client {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  userId    String    @db.ObjectId
  user      User      @relation("UserClients", fields: [userId], references: [id])
  accountId String?   @db.ObjectId
  account   User?     @relation("AccountClients", fields: [accountId], references: [id])
  name      String
  email     String
  phone     String?
  address   String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  bookings  Booking[]
  reports   Report[]

  @@unique([userId, email])
  @@map("clients")
}

model Booking {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  userId          String        @db.ObjectId
  user            User          @relation(fields: [userId], references: [id])
  clientId        String        @db.ObjectId
  client          Client        @relation(fields: [clientId], references: [id])
  title           String
  description     String?
  bookingDate     DateTime
  status          BookingStatus @default(scheduled)
  propertyAddress String?
  lat             Float?
  lng             Float?
  amountReceived  Float         @default(0)
  amountDue       Float         @default(0)
  paymentNote     String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  reports         Report[]
  calculations    Calculation[]

  @@map("bookings")
}

enum BookingStatus {
  scheduled
  pending
  completed
  cancelled
}

model Report {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String   @db.ObjectId
  user            User     @relation(fields: [userId], references: [id])
  clientId        String   @db.ObjectId
  client          Client   @relation(fields: [clientId], references: [id])
  bookingId       String?  @db.ObjectId
  booking         Booking? @relation(fields: [bookingId], references: [id])
  title           String
  content         String
  mouzaName       String?
  plotNo          String?
  areaSqFt        Float?
  areaKatha       Float?
  areaDecimal     Float?
  notes           String?
  fileUrl         String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("reports")
}

model Calculation {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  userId     String   @db.ObjectId
  user       User     @relation(fields: [userId], references: [id])
  bookingId  String?  @db.ObjectId
  booking    Booking? @relation(fields: [bookingId], references: [id])
  type       String
  inputData  Json
  resultData Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("calculations")
}

model SavedMap {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  name      String
  data      Json
  fileUrl   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("saved_maps")
}

model BlockedDate {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  date      DateTime
  reason    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, date])
  @@map("blocked_dates")
}
